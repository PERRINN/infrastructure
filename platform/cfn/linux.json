{
	"AWSTemplateFormatVersion": "2010-09-09",

	"Description": "PLATFORM Linux Instance 1.0.0 - Author Chris Moran",

	"Parameters": {
		"AWSRegion": {
			"Type": "String",
			"Default": "us-west-2"
		},
		"CfnBaseName": {
			"Type": "String",
			"Default": "perrincfn"
		},
		"CfnBucketName": {
			"Type": "String",
			"Default": "platform"
		},
		"DnsDomain": {
			"Type": "String",
			"Default": "oordas.net"
		},
		"KeyName": {
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Default": "CHANGEME"
		},
		"StackRelease": {
			"Type": "String",
			"Default": "1.0.0"
		},
		"SubnetList": {
			"Type": "CommaDelimitedList"
		},
		"VPC": {
			"Type": "String"
		},
		"ServerAmi": {
			"Type": "String",
			"AllowedPattern": "ami-[a-f0-9]+",
			"Default": "ami-9ff7e8af"
		},
		"WebServerInstanceType": {
			"Type": "String",
			"Default": "t2.micro"
		},
		"NewRelicKey": {
			"Type": "String",
			"AllowedPattern": ".+",
			"Default": "9"
		},
		"LogglyKey": {
			"Type": "String",
			"AllowedPattern": ".+",
			"Default": "c"
		},
		"LogglyHost": {
			"Type": "String",
			"AllowedPattern": ".+",
			"Default": "logs-01.loggly.com:514"
		},
		"DevLSecurityGroup": {
			"Type": "String"
		},
		"ScriptRegion": {
			"Type": "String",
			"Default": "ap-southeast-2"
		},
		"DatabaseHost": {
			"Type": "String",
			"AllowedPattern": ".+"
		},
		"DatabasePort": {
			"Type": "String",
			"AllowedPattern": ".+"
		},
		"DatabaseName": {
			"Type": "String",
			"AllowedPattern": ".+"
		},
		"DatabasePassword": {
			"Type": "String",
			"AllowedPattern": ".+",
			"NoEcho": true
		},
		"DatabaseUser": {
			"Type": "String",
			"AllowedPattern": ".+"
		},
		"BucketProfile": {
			"Type": "String",
			"AllowedPattern": ".+"
		},
		"InstanceRole": {
			"Type": "String",
			"AllowedPattern": ".+"
		}
	},

	"Conditions": {

	},

	"Mappings": {
		"SizeMap": {
			"t2.micro": { "linux": "-Xmx768m" },
			"t2.small": { "linux": "-Xmx768m" },
			"t2.medium": { "linux": "-Xmx3072m" },
			"t2.large": { "linux": "-Xmx6144m" }
		}
	},

	"Resources": {
		"WebLaunchConfig" : {
			"Type": "AWS::AutoScaling::LaunchConfiguration",
			"Properties": {
				"AssociatePublicIpAddress": true,
				"ImageId" : { "Ref" :  "ServerAmi"},
				"InstanceType": { "Ref": "WebServerInstanceType"},
				"InstanceMonitoring": "false",
				"KeyName": { "Ref": "KeyName" },
				"IamInstanceProfile": { "Ref": "BucketProfile" },
				"SecurityGroups": [
					{ "Ref": "DevLSecurityGroup" }
				],
				"UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
					"#!/bin/bash -v\n",
					"yum update -y aws-cfn-bootstrap\n",
					"# Install the files and packages from the metadata\n",
					"/opt/aws/bin/cfn-init -v ",
					"         --stack ", { "Ref" : "AWS::StackName" },
					"         --resource WebLaunchConfig",
					"         --configsets InstallAndRun",
					"         --region ", { "Ref" : "AWS::Region" }, "\n"
							]
						]
					}
				}
			},
			"Metadata" : {
				"AWS::CloudFormation::Authentication": {
					"S3AccessCreds": {
						"type": "S3",
						"roleName": { "Ref": "InstanceRole"},
						"buckets" : [
							{ "Ref": "CfnBucketName"}
						]
					}
				},
				"AWS::CloudFormation::Init": {
					"configSets": {
						"InstallAndRun": [ "Install", "Configure"]
					},
					"Install": {
						"packages": {
							"yum": {
								"newrelic-sysmond": [],
								"rsyslog": []
							}
						},
						"files": {
							"/etc/rsyslog.d/22-loggly.conf": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/config/22-loggly.conf"
								]] 
								},
								"mode": "000644",
								"owner": "root",
								"group": "root",
								"authentication": "S3AccessCreds"
							},
							"/etc/rsyslog.d/21-tomcat.conf": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/config/21-tomcat.conf"
								]] 
								},
								"mode": "000644",
								"owner": "root",
								"group": "root",
								"authentication": "S3AccessCreds"
							},
							"/etc/tomcat8/tomcat-users.xml": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/config/tomcat-users.xml"
								]] 
								},
								"mode": "000644",
								"owner": "tomcat",
								"group": "tomcat",
								"authentication": "S3AccessCreds"
							},
							"/etc/tomcat8/tomcat8.conf": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/config/tomcat8.conf.tpl"
								]] 
								},
								"context": {
									"MEMOPT": { "Fn::FindInMap": [ "SizeMap", { "Ref": "WebServerInstanceType" }, "linux" ] }
								},
								"mode": "000644",
								"owner": "tomcat",
								"group": "tomcat",
								"authentication": "S3AccessCreds"
							},
							"/tmp/platform.conf": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/config/platform.conf.tpl"
								]] 
								},
								"context": {
									"DBUSER": { "Ref": "DatabaseUser" },
									"DBPASS": { "Ref": "DatabasePassword" },
									"DBHOST": { "Ref": "DatabaseHost" },
									"DBNAME": { "Ref": "DatabaseName" }
								},
								"mode": "000644",
								"owner": "tomcat",
								"group": "tomcat",
								"authentication": "S3AccessCreds"							
							},
							"/etc/cfn/cfn-hup.conf": {
								"content": { "Fn::Join": [ "", [
									"[main]\n",
									"stack=", { "Ref" : "AWS::StackId" }, "\n",
									"region=", { "Ref" : "AWS::Region" }, "\n"
								] ] },
								"mode": "000400",
								"owner": "root",
								"group": "root"
							},
							"/etc/cfn/hooks.d/cfn-auto-reloader.conf": {
								"content": { "Fn::Join": [ "", [
									"[cfn-auto-reloader-hook]\n",
									"triggers=post.update\n",
									"path=Resources.WebServerInstance.Metadata.AWS::CloudFormation::Init\n",
									"action=/opt/aws/bin/cfn-init -v ",
									"         --stack ", { "Ref": "AWS::StackName" },
									"         --resource WebLaunchConfig ",
									"         --configsets InstallAndRun ",
									"         --region ", { "Ref": "AWS::Region" }, "\n",
									"runas=root\n"
								] ] }
							},
							"/tmp/newrelic-afant.zip": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/bin/newrelic-afant.zip"
								]] 
								},
								"mode": "000644",
								"owner": "root",
								"group": "root",
								"authentication": "S3AccessCreds"
							},
							"/tmp/platform.war": {
								"source": { "Fn::Join": [ "", [
									"https://s3-",
									{"Ref": "ScriptRegion"},
									".amazonaws.com/",
									{ "Ref": "CfnBaseName" },
									"/",
									{ "Ref": "CfnBucketName" },
									"/",
									{ "Ref": "StackRelease"},
									"/bin/platform.war"
								]] 
								},
								"mode": "000644",
								"owner": "root",
								"group": "root",
								"authentication": "S3AccessCreds"
							}
						},
						"services": {
							"sysvinit": { "enabled": "true", "ensurerunning": "true" },
							"tomcat8": { "enabled": "true", "ensurerunning": "true" },
							"newrelic-sysmond": { "enabled": "true", "ensurerunning": "true" },
							"rsyslog": { "enabled": "true", "ensurerunning": "true" },
							"cfn-hup": { "enabled": "true", "ensurerunning": "true",
							"files": [ "/etc/cfn/cfn-hup.conf", "/etc/cfn/hooks.d/cfn-auto-reloader.conf" ] }
						}
					},
					"Configure": {
						"commands": {
							"01_prestart_rsyslog": {
								"command": "chkconfig rsyslog on"
							},
							"01_start_rsyslog": {
								"command": "service rsyslog restart"
							},
							"03_configure_newrelic": {
								"command": { "Fn::Join": [ "", ["nrsysmond-config --set license_key=", { "Ref": "NewRelicKey" }]]}
							},
							"04_newrelic_agent": {
								"command": { "Fn::Join": [ "", ["unzip /tmp/newrelic-afant.zip -d ", "/usr/share/tomcat8"]]}
							},
							"05_prestart_newrelic": {
								"command": { "Fn::Join": [ "", [ "chkconfig newrelic-sysmond on" ]]}
							},
							"06_start_newrelic": {
								"command": { "Fn::Join": [ "", [ "/etc/init.d/newrelic-sysmond start" ]]}
							},
							"80_unpack_app": {
								"command": { "Fn::Join": [ "", [ "mv /tmp/platform.war /usr/share/tomcat8/webapps" ]]}
							},
							"81_load_config_1": {
								"command": { "Fn::Join": [ "", [ "service tomcat8 start; sleep 60; service tomcat8 stop" ]]}
							},
							"82_load_config_2": {
								"command": { "Fn::Join": [ "", [ "mv /tmp/platform.conf /usr/share/tomcat8/webapps/platform/WEB-INF/platform.conf" ]]}
							},
							"99_prestart_tomcat8": {
								"command": { "Fn::Join": [ "", [ "chkconfig tomcat8 on" ]]}
							},
							"99_start_tomcat8": {
								"command": { "Fn::Join": [ "", [ "service tomcat8 start" ]]}
							}
						}
					}
				}
			}
		}
	},

	"Outputs": {
		"memopt": {
			"Value": { "Fn::FindInMap": [ "SizeMap", { "Ref": "WebServerInstanceType" }, "linux" ] }
		},
		"launchconfig": {
			"Value": { "Ref": "WebLaunchConfig"}
		}
	}

}
